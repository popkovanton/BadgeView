<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="BadgeView">
        <attr name="bv_badgeFontFamily" format="reference" />
        <attr name="bv_badgeGravity" />
        <attr name="bv_badgeShape" />
        <attr name="bv_badgeWidth" format="integer|dimension" />
        <attr name="bv_badgeHeight" format="integer|dimension" />
        <attr name="bv_badgeTextColor" format="color" />
        <attr name="bv_badgeBackColor" format="color" />
        <attr name="bv_badgeForwardColor" format="color" />
        <attr name="bv_badgeTextSize" format="integer|dimension" />
        <attr name="bv_horizontalSpace" format="integer|dimension" />
        <attr name="bv_verticalSpace" format="integer|dimension" />
        <attr name="bv_iconDrawable" format="reference" />
    </declare-styleable>
    <attr name="bv_badgeGravity">
        <flag name="top" value="0x30" />
        <flag name="bottom" value="0x50" />
        <flag name="left" value="0x03" />
        <flag name="right" value="0x05" />
    </attr>
    <attr name="bv_badgeShape">
        <flag name="icon" value="0" />
        <flag name="circle" value="1" />
        <flag name="oval" value="2" />
        <flag name="rectangle" value="3" />
    </attr>
</resources>